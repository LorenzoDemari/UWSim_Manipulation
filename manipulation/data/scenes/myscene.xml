<?xml version="1.0"?>

<!DOCTYPE UWSimScene SYSTEM "UWSimScene.dtd" >

<UWSimScene>
  <oceanState>
    <windx> 1.0 </windx>
    <windy> 1.0 </windy>
    <windSpeed> 12 </windSpeed>
    <depth> 1000 </depth>
    <reflectionDamping> 0.35 </reflectionDamping>
    <waveScale> 1e-8 </waveScale>
    <isNotChoppy> 0 </isNotChoppy>
    <choppyFactor> -2.5 </choppyFactor>
    <crestFoamHeight> 2.2 </crestFoamHeight>
    <oceanSurfaceHeight> 0 </oceanSurfaceHeight>
    <fog>
      <density> 0.0 </density>
      <color>
	<r>0.017</r>
	<g>0.027</g>
	<b>0.079</b>
      </color>
    </fog>
    <color>
	<r>0.017</r>
	<g>0.027</g>
	<b>0.079</b>
    </color>
    <attenuation>
      <r>0.015</r>
      <g>0.0075 </g>
      <b> 0.005 </b>
    </attenuation>
  </oceanState>

  <simParams>
    <disableShaders> 0 </disableShaders>
    <resw> 800 </resw>
    <resh> 600 </resh>
    <enablePhysics> 1 </enablePhysics>
  </simParams>

  <camera>
    <freeMotion> 1 </freeMotion>
    <objectToTrack>girona500_RAUVI/base_link</objectToTrack>
    <fov> 60 </fov>
    <aspectRatio> 1.33 </aspectRatio>
    <near> 1 </near>
    <far> 10000 </far>
    <position>
      <x>10</x>
      <y>0 </y>
      <z>-7 </z>
    </position> 
    <lookAt>
      <x>0</x>
      <y>0 </y>
      <z>-10 </z>
    </lookAt>
  </camera>

 <vehicle>
    <name>girona500_RAUVI</name>
    <file>data/scenes/g500ARM5.urdf</file>
    <jointValues>
      <joint> 0 </joint>
      <joint> M_PI_4</joint>
      <joint> M_PI_4 </joint>
      <joint> 0 </joint>
      <joint>-0.3 </joint>
    </jointValues>
    <position>
      <x> 0</x>
      <y> 5 </y>
      <z> -10 </z>
    </position>
    <orientation>
      <r>3.1415</r>
      <p>0 </p>
      <y>1.77 </y>
    </orientation>
    <ForceSensor>
       <name>ForceG500RAUVI</name>
       <target>base_link</target>
       <offsetp>
       <x>-0.2</x>
       <y>0.75</y>
       <z>0</z>
       </offsetp>
       <offsetr>
       <x>-1.57</x>
       <y>0</y>
       <z>3.14</z>
       </offsetr>
    </ForceSensor>
  </vehicle>

  <vehicle>
    <name>girona500_TRIDENT</name>
    <file>data/scenes/g500ARM5.urdf</file>
    <jointValues>
      <joint> 0 </joint>
      <joint> M_PI_4</joint>
      <joint> M_PI_4 </joint>
      <joint> 0 </joint>
      <joint>-0.3 </joint>
    </jointValues>
    <position>
      <x> 0</x>
      <y> -5 </y>
      <z> -10 </z>
    </position>
    <orientation>
      <r>3.1415</r>
      <p>0 </p>
      <y>-1.77 </y>
    </orientation>
    <ForceSensor>
       <name>ForceG500TRIDENT</name>
       <target>base_link</target>
       <offsetp>
       <x>-0.2</x>
       <y>0.75</y>
       <z>0</z>
       </offsetp>
       <offsetr>
       <x>-1.57</x>
       <y>0</y>
       <z>3.14</z>
       </offsetr>
    </ForceSensor>
  </vehicle>

  <object>
    <name> blackbox </name>
    <file> objects/blackbox_uib_trimesh.osg  </file>
    <position>
      <x> 0</x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>3.1415</p>
      <y>0</y>
    </orientation>
    <physics>
      <mass> 15 </mass>
      <inertia> 
        <x> 0</x>
        <y> 0 </y>
        <z> 0 </z>
      </inertia>
      <collisionShapeType> box </collisionShapeType>
    </physics>
  </object>

  <object>
    <name> terrain </name>
    <file> terrain/seafloor/terrain_noship.ive </file>
    <position>
      <x> 0</x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>0 </p>
      <y>0 </y>
    </orientation>
    <physics>
      <mass> 0 </mass>
      <collisionShapeType> trimesh </collisionShapeType>
      <isKinematic> no </isKinematic>
    </physics>
  </object>

  <rosInterfaces>
    <ROSOdomToPAT>
      <topic> /dataNavigator_G500RAUVI </topic>
      <vehicleName> girona500_RAUVI </vehicleName>
    </ROSOdomToPAT>
    <ROSOdomToPAT>
      <topic> /dataNavigator_G500TRIDENT </topic>
      <vehicleName> girona500_TRIDENT </vehicleName>
    </ROSOdomToPAT>
    <PATToROSOdom>
      <topic> /uwsim/girona500_odom_RAUVI </topic>
      <vehicleName> girona500_RAUVI </vehicleName>
    </PATToROSOdom>
    <PATToROSOdom>
      <topic> /uwsim/girona500_odom_TRIDENT </topic>
      <vehicleName> girona500_TRIDENT </vehicleName>
    </PATToROSOdom>
    <WorldToROSTF>
      <rootName> world </rootName>
      <enableObjects> 1 </enableObjects>
      <rate>10</rate>
    </WorldToROSTF>
    <ArmToROSJointState> 
	<topic>/uwsim/RAUVI_joint_state</topic>
	<vehicleName> girona500_RAUVI </vehicleName>
    </ArmToROSJointState>
    <ArmToROSJointState> 
	<topic>/uwsim/TRIDENT_joint_state</topic>
	<vehicleName> girona500_TRIDENT </vehicleName>
    </ArmToROSJointState>
    <ROSJointStateToArm> 
	<topic>/uwsim/RAUVI_joint_state_command</topic>
	<vehicleName> girona500_RAUVI </vehicleName>
    </ROSJointStateToArm>
    <ROSJointStateToArm> 
	<topic>/uwsim/TRIDENT_joint_state_command</topic>
	<vehicleName> girona500_TRIDENT </vehicleName>
    </ROSJointStateToArm>
    <ForceSensorROS>
        <name>ForceG500RAUVI</name>
        <topic>g500/ForceSensorRAUVI</topic>
        <rate>100</rate>
    </ForceSensorROS>
    <ForceSensorROS>
        <name>ForceG500TRIDENT</name>
        <topic>g500/ForceSensorTRIDENT</topic>
        <rate>100</rate>
    </ForceSensorROS>
  </rosInterfaces>

</UWSimScene>

